<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="@color/accent_green"
            android:centerColor="@color/accent_blue"
            android:endColor="@color/text_secondary"
            android:type="linear" />
            <corners android:radius="15dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="@color/accent_blue"
            android:centerColor="@color/accent_green"
            android:endColor="@color/secondary_action"
            android:type="linear" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</selector>