<?xml version="1.0" encoding="utf-8"?>
<animation-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:oneshot="false">
    <item android:duration="3000">
        <shape>
            <gradient
                android:angle="45"
                android:startColor="@color/accent_blue_20"
            android:centerColor="@color/accent_green_20"
            android:endColor="@color/white_20"
            android:type="linear" />
        </shape>
    </item>
    <item android:duration="3000">
        <shape>
            <gradient
                android:angle="135"
                android:startColor="@color/white_20"
            android:centerColor="@color/accent_blue_20"
            android:endColor="@color/accent_green_20"
            android:type="linear" />
        </shape>
    </item>
</animation-list>