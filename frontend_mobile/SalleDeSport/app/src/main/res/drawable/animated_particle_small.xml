<!-- res/drawable/animated_particle_small.xml -->
<animation-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:oneshot="false">
    <item android:duration="3000">
        <shape android:shape="oval">
            <gradient
                android:angle="45"
                android:startColor="#1A237E4D"
                android:centerColor="#0A0F184D"
                android:endColor="#141C2E4D"
                android:type="linear" />
        </shape>
    </item>
    <item android:duration="3000">
        <shape android:shape="oval">
            <gradient
                android:angle="135"
                android:startColor="#0A0F184D"
                android:centerColor="#141C2E4D"
                android:endColor="#1A237E4D"
                android:type="linear" />
        </shape>
    </item>
    <item android:duration="3000">
        <shape android:shape="oval">
            <gradient
                android:angle="225"
                android:startColor="#141C2E4D"
                android:centerColor="#1A237E4D"
                android:endColor="#0A0F184D"
                android:type="linear" />
        </shape>
    </item>
</animation-list>