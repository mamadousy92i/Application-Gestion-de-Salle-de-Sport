<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cosmic_background">

    <!-- Animated floating particles - légèrement réduites -->
    <View
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="-125dp"
        android:layout_marginEnd="-125dp"
        android:alpha="0.1"
        android:background="@drawable/plasma_orb"
        android:backgroundTint="@color/accent_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginStart="-85dp"
        android:layout_marginBottom="-85dp"
        android:alpha="0.08"
        android:background="@drawable/plasma_orb"
        android:backgroundTint="@color/accent_purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="180dp"
        android:layout_marginStart="-60dp"
        android:alpha="0.06"
        android:background="@drawable/plasma_orb"
        android:backgroundTint="@color/accent_orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- HEADER FUTURISTE - Taille réduite -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/futuristicHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/caard_bg"
        app:cardCornerRadius="22dp"
        app:cardElevation="14dp"
        app:strokeColor="@color/glass_border"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <!-- Top bar - légèrement compact -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <!-- Bouton retour holographique -->
                <FrameLayout
                    android:id="@+id/holoBackButton"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/holographic_button"
                        android:alpha="0.8" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="11dp"
                        android:src="@drawable/ic_arrow_back"
                        app:tint="@color/white" />
                </FrameLayout>

                <!-- Titre central -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="◦ MISSION SELECTION ◦"
                        android:textColor="@color/accent_green"
                        android:textSize="10sp"
                        android:fontFamily="@font/poppins_medium"
                        android:letterSpacing="0.2"
                        android:alpha="0.8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="OBJECTIFS"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppins_bold"
                        android:letterSpacing="0.1"
                        android:shadowColor="@color/accent_green"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="6" />
                </LinearLayout>

                <!-- Progress orb -->
                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/progress_orb"
                        android:alpha="0.3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="2/3"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_bold" />
                </FrameLayout>
            </LinearLayout>

            <!-- Subtitle -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choisissez votre voie vers la transformation ultime"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:alpha="0.9"
                android:lineSpacingExtra="2dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- CONTENU AVEC SCROLLING EFFECTS -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/futuristicHeader"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            android:paddingBottom="20dp">

            <!-- CARD PRISE DE MASSE - Taille adaptée -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/megaCardMuscle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/card_bg"
                app:cardCornerRadius="24dp"
                app:cardElevation="16dp"
                app:strokeColor="@color/accent_orange"
                app:strokeWidth="2dp">

                <!-- Geometric background pattern -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/geometric_pattern_orange"
                    android:alpha="0.1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Top section avec design futuriste -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="18dp"
                        android:gravity="center_vertical">

                        <!-- Mega icon avec multiple layers -->
                        <FrameLayout
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            android:layout_marginEnd="16dp">

                            <!-- Glow background -->
                            <View
                                android:layout_width="76dp"
                                android:layout_height="76dp"
                                android:layout_gravity="center"
                                android:background="@drawable/mega_glow_orange"
                                android:alpha="0.6" />

                            <!-- Main icon container -->
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardBackgroundColor="@color/accent_orange"
                                app:cardCornerRadius="22dp"
                                app:cardElevation="10dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="16dp"
                                    android:src="@drawable/ic_muscle_advanced"
                                    app:tint="@color/white" />
                            </com.google.android.material.card.MaterialCardView>

                            <!-- Power indicator -->
                            <View
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_gravity="top|end"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="3dp"
                                android:background="@drawable/power_indicator_orange" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!-- Badge category -->
                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="6dp"
                                android:text="● MUSCLE BUILDER"
                                android:textColor="@color/white"
                                android:textSize="9sp"
                                android:fontFamily="@font/poppins_bold"
                                app:chipBackgroundColor="@color/accent_orange"
                                app:chipCornerRadius="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PRISE DE MASSE"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:fontFamily="@font/poppins_bold"
                                android:letterSpacing="0.05"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Programme intensif pour maximiser la croissance musculaire et la force explosive"
                                android:textColor="@color/text_secondary"
                                android:textSize="11sp"
                                android:fontFamily="@font/poppins_medium"
                                android:lineSpacingExtra="2dp"
                                android:layout_marginBottom="8dp" />

                            <!-- Stats mini -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginEnd="14dp"
                                    android:gravity="center_vertical">

                                    <View
                                        android:layout_width="5dp"
                                        android:layout_height="5dp"
                                        android:layout_marginEnd="4dp"
                                        android:background="@drawable/mini_circle"
                                        android:backgroundTint="@color/accent_orange" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="4-6 mois"
                                        android:textColor="@color/white"
                                        android:textSize="10sp"
                                        android:fontFamily="@font/poppins_semibold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <View
                                        android:layout_width="5dp"
                                        android:layout_height="5dp"
                                        android:layout_marginEnd="4dp"
                                        android:background="@drawable/mini_circle"
                                        android:backgroundTint="@color/accent_green" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Intensif"
                                        android:textColor="@color/white"
                                        android:textSize="10sp"
                                        android:fontFamily="@font/poppins_semibold" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Holographic arrow -->
                        <FrameLayout
                            android:layout_width="36dp"
                            android:layout_height="36dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/holographic_arrow_bg"
                                android:alpha="0.3" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_arrow_forward"
                                app:tint="@color/accent_orange" />
                        </FrameLayout>
                    </LinearLayout>

                    <!-- Bottom section avec progression -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="18dp"
                        android:paddingBottom="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Popularité:"
                            android:textColor="@color/text_secondary"
                            android:textSize="10sp"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginEnd="8dp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="3dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/popularity_bar_orange" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="87%"
                            android:textColor="@color/accent_orange"
                            android:textSize="10sp"
                            android:fontFamily="@font/poppins_bold" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- CARD PERTE DE POIDS -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/megaCardBurn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/card_bg"
                app:cardCornerRadius="24dp"
                app:cardElevation="16dp"
                app:strokeColor="@color/accent_red"
                app:strokeWidth="2dp">

                <!-- Flame pattern background -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/flame_pattern_red"
                    android:alpha="0.1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="18dp"
                        android:gravity="center_vertical">

                        <FrameLayout
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            android:layout_marginEnd="16dp">

                            <View
                                android:layout_width="76dp"
                                android:layout_height="76dp"
                                android:layout_gravity="center"
                                android:background="@drawable/mega_glow_red"
                                android:alpha="0.6" />

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardBackgroundColor="@color/accent_red"
                                app:cardCornerRadius="22dp"
                                app:cardElevation="10dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="16dp"
                                    android:src="@drawable/ic_flame_advanced"
                                    app:tint="@color/white" />
                            </com.google.android.material.card.MaterialCardView>

                            <View
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_gravity="top|end"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="3dp"
                                android:background="@drawable/power_indicator_red" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="6dp"
                                android:text="🔥 FAT BURNER"
                                android:textColor="@color/white"
                                android:textSize="9sp"
                                android:fontFamily="@font/poppins_bold"
                                app:chipBackgroundColor="@color/accent_red"
                                app:chipCornerRadius="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PERTE DE POIDS"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:fontFamily="@font/poppins_bold"
                                android:letterSpacing="0.05"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Transformation corporelle complète avec cardio intensif et nutrition optimisée"
                                android:textColor="@color/text_secondary"
                                android:textSize="11sp"
                                android:fontFamily="@font/poppins_medium"
                                android:lineSpacingExtra="2dp"
                                android:layout_marginBottom="8dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginEnd="14dp"
                                    android:gravity="center_vertical">

                                    <View
                                        android:layout_width="5dp"
                                        android:layout_height="5dp"
                                        android:layout_marginEnd="4dp"
                                        android:background="@drawable/mini_circle"
                                        android:backgroundTint="@color/accent_red" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="2-4 mois"
                                        android:textColor="@color/white"
                                        android:textSize="10sp"
                                        android:fontFamily="@font/poppins_semibold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <View
                                        android:layout_width="5dp"
                                        android:layout_height="5dp"
                                        android:layout_marginEnd="4dp"
                                        android:background="@drawable/mini_circle"
                                        android:backgroundTint="@color/accent_orange" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Cardio+"
                                        android:textColor="@color/white"
                                        android:textSize="10sp"
                                        android:fontFamily="@font/poppins_semibold" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="36dp"
                            android:layout_height="36dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/holographic_arrow_bg"
                                android:alpha="0.3" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_arrow_forward"
                                app:tint="@color/accent_red" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="18dp"
                        android:paddingBottom="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Efficacité:"
                            android:textColor="@color/text_secondary"
                            android:textSize="10sp"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginEnd="8dp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="3dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/popularity_bar_red" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="94%"
                            android:textColor="@color/accent_red"
                            android:textSize="10sp"
                            android:fontFamily="@font/poppins_bold" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- CARD MAINTIEN -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/megaCardBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/card_bg"
                app:cardCornerRadius="24dp"
                app:cardElevation="16dp"
                app:strokeColor="@color/accent_blue"
                app:strokeWidth="2dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/zen_pattern_blue"
                    android:alpha="0.1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="18dp"
                        android:gravity="center_vertical">

                        <FrameLayout
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            android:layout_marginEnd="16dp">

                            <View
                                android:layout_width="76dp"
                                android:layout_height="76dp"
                                android:layout_gravity="center"
                                android:background="@drawable/mega_glow_blue"
                                android:alpha="0.6" />

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardBackgroundColor="@color/accent_blue"
                                app:cardCornerRadius="22dp"
                                app:cardElevation="10dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="16dp"
                                    android:src="@drawable/ic_balance_advanced"
                                    app:tint="@color/white" />
                            </com.google.android.material.card.MaterialCardView>

                            <View
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_gravity="top|end"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="3dp"
                                android:background="@drawable/power_indicator_blue" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="6dp"
                                android:text="⚖️ BALANCE"
                                android:textColor="@color/white"
                                android:textSize="9sp"
                                android:fontFamily="@font/poppins_bold"
                                app:chipBackgroundColor="@color/accent_blue"
                                app:chipCornerRadius="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MAINTIEN FORME"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:fontFamily="@font/poppins_bold"
                                android:letterSpacing="0.05"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Équilibre parfait entre wellness, performance et style de vie durable"
                                android:textColor="@color/text_secondary"
                                android:textSize="11sp"
                                android:fontFamily="@font/poppins_medium"
                                android:lineSpacingExtra="2dp"
                                android:layout_marginBottom="8dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginEnd="14dp"
                                    android:gravity="center_vertical">

                                    <View
                                        android:layout_width="5dp"
                                        android:layout_height="5dp"
                                        android:layout_marginEnd="4dp"
                                        android:background="@drawable/mini_circle"
                                        android:backgroundTint="@color/accent_blue" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Long terme"
                                        android:textColor="@color/white"
                                        android:textSize="10sp"
                                        android:fontFamily="@font/poppins_semibold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <View
                                        android:layout_width="5dp"
                                        android:layout_height="5dp"
                                        android:layout_marginEnd="4dp"
                                        android:background="@drawable/mini_circle"
