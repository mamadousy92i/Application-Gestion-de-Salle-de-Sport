<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg">

    <!-- ScrollView pour le contenu principal -->
    <ScrollView
        android:id="@+id/main_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigation"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Header Section Compact -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Background avec dégradé compact -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <!-- Overlay subtil -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:alpha="0.05" />

                <!-- Header Content Compact -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="28dp">

                    <!-- Top Bar compact -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp"
                        android:gravity="center_vertical">

                        <!-- Bouton Back compact -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/back_button"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:contentDescription="@string/back_button_desc"
                            app:cardBackgroundColor="@color/white_10"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/white_20"
                            app:strokeWidth="1dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackgroundBorderless">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/back_button_desc"
                                android:src="@drawable/ic_arrow_back"
                                android:padding="8dp"
                                app:tint="@color/white" />
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Spacer -->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <!-- Bouton Modifier compact -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/edit_button"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginEnd="8dp"
                            android:elevation="4dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:minWidth="80dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="@string/edit_button_text"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            app:cornerRadius="16dp"
                            app:icon="@drawable/ic_edit"
                            app:iconGravity="start"
                            app:iconSize="14dp"
                            app:iconTint="@color/white"
                            app:rippleColor="@color/white_20"
                            app:backgroundColor="@color/accent_green" />

                        <!-- Bouton Déconnexion compact -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/logout_button"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:contentDescription="@string/logout_button_desc"
                            app:cardBackgroundColor="@color/error_red_20"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="2dp"
                            app:strokeColor="@color/error_red_30"
                            app:strokeWidth="1dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackgroundBorderless">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/logout_button_desc"
                                android:src="@drawable/logout_vector"
                                android:padding="8dp"
                                app:tint="@color/error_red" />
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <!-- Profile Image compact -->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="12dp">

                        <!-- Badge Premium compact -->
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/profile_image"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:padding="2dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_edit_profile"
                            android:contentDescription="@string/profile_image_desc"
                            app:shapeAppearanceOverlay="@style/CircleImageView"
                            app:strokeColor="@color/accent_green"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="bottom|end"
                            android:layout_marginEnd="2dp"
                            android:layout_marginBottom="4dp"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_certified"
                                android:padding="2dp"
                                android:contentDescription="@string/verified_badge_desc" />
                        </com.google.android.material.card.MaterialCardView>
                    </FrameLayout>

                    <!-- Name and Subscription compact -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/first_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/poppins_bold"
                            android:letterSpacing="-0.02"
                            android:maxLines="1"
                            android:text="@string/first_name"
                            android:textColor="@color/white"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/last_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.9"
                            android:ellipsize="end"
                            android:fontFamily="@font/poppins_semibold"
                            android:letterSpacing="-0.01"
                            android:maxLines="1"
                            android:text="@string/last_name"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/subscription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/subscription_text"
                            android:textColor="@color/dark_bg"
                            android:textSize="11sp"
                            app:chipBackgroundColor="@color/accent_green"
                            app:chipEndPadding="12dp"
                            app:chipIconTint="@color/dark_bg"
                            app:chipMinHeight="24dp"
                            app:chipStartPadding="12dp"
                            app:rippleColor="@color/white_20" />
                    </LinearLayout>

                    <!-- User Stats compact -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/card_bg"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/white_10"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp">

                            <!-- Statistique Age compact -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_gravity="center_horizontal"
                                android:orientation="vertical">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_marginBottom="6dp"
                                    app:cardBackgroundColor="@color/accent_green"
                                    app:cardCornerRadius="16dp">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_user"
                                        android:padding="6dp"
                                        android:contentDescription="@string/age_icon_desc"
                                        app:tint="@color/white" />
                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/age_label"
                                    android:textColor="@color/accent_green"
                                    android:textSize="10sp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:alpha="0.95" />

                                <TextView
                                    android:id="@+id/age"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="@string/age_value"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/poppins_bold" />
                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/white_10" />

                            <!-- Statistique Taille compact -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_marginBottom="6dp"
                                    app:cardBackgroundColor="@color/accent_blue"
                                    app:cardCornerRadius="16dp"
                                    app:cardElevation="4dp">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_height"
                                        android:padding="6dp"
                                        android:contentDescription="@string/height_icon_desc"
                                        app:tint="@color/white" />
                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/height_label"
                                    android:textColor="@color/accent_blue"
                                    android:textSize="10sp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:alpha="0.95" />

                                <TextView
                                    android:id="@+id/height"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="@string/height_value"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/poppins_bold" />
                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/white_10" />

                            <!-- Statistique Poids compact -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_marginBottom="6dp"
                                    app:cardBackgroundColor="@color/accent_purple"
                                    app:cardCornerRadius="16dp"
                                    app:cardElevation="4dp">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_weight"
                                        android:padding="6dp"
                                        android:contentDescription="@string/weight_icon_desc"
                                        app:tint="@color/white" />
                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/weight_label"
                                    android:textColor="@color/accent_purple"
                                    android:textSize="10sp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:alpha="0.95" />

                                <TextView
                                    android:id="@+id/weight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="@string/weight_value"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/poppins_bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </FrameLayout>

            <!-- Goal Section compact -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="-20dp"
                android:layout_marginEnd="12dp"
                app:cardBackgroundColor="@color/card_bg"
                app:cardCornerRadius="14dp"
                app:cardElevation="6dp"
                app:strokeColor="@color/white_10"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center_vertical"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="0dp"
                            android:src="@drawable/ic_goal"
                            android:contentDescription="@string/goal_icon_desc" />
                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/goal_label"
                            android:textColor="@color/accent_green"
                            android:textSize="11sp"
                            android:fontFamily="@font/poppins_medium" />

                        <TextView
                            android:id="@+id/goal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/goal_value"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_bold" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/edit_goal_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_goal_button_text"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:fontFamily="@font/poppins_semibold"
                        app:cornerRadius="12dp"
                        app:backgroundTint="@color/accent_green"
                        app:rippleColor="@color/white_20"
                        android:minWidth="80dp"
                        android:minHeight="36dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Last Session compact -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/last_session_title"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="8dp"
                    app:drawableStartCompat="@drawable/ic_workout"
                    app:drawableTint="@color/accent_green" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/card_bg"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="4dp"
                    app:strokeColor="@color/white_10"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:id="@+id/last_session_type"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="@string/last_session_type"
                                android:textColor="@color/accent_green"
                                android:textSize="14sp"
                                android:fontFamily="@font/poppins_bold" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/last_session_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/last_session_date"
                                android:textSize="10sp"
                                android:textColor="@color/accent_green"
                                android:fontFamily="@font/poppins_medium"
                                app:chipBackgroundColor="@color/accent_green_20"
                                app:chipIcon="@drawable/ic_calendar"
                                app:chipIconTint="@color/accent_green"
                                app:chipCornerRadius="8dp"
                                app:chipMinHeight="24dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginEnd="6dp"
                                    app:cardBackgroundColor="@color/accent_blue_20"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="0dp">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_clock"
                                        android:padding="4dp"
                                        android:contentDescription="@string/clock_icon_desc"
                                        app:tint="@color/accent_blue" />
                                </com.google.android.material.card.MaterialCardView>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/duration_label"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="10sp"
                                        android:fontFamily="@font/poppins_medium" />

                                    <TextView
                                        android:id="@+id/last_session_duration"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/last_session_duration"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:fontFamily="@font/poppins_bold" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginEnd="6dp"
                                    app:cardBackgroundColor="@color/accent_orange_20"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="0dp">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_flame"
                                        android:padding="4dp"
                                        android:contentDescription="@string/flame_icon_desc"
                                        app:tint="@color/accent_orange" />
                                </com.google.android.material.card.MaterialCardView>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/calories_label"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="10sp"
                                        android:fontFamily="@font/poppins_medium" />

                                    <TextView
                                        android:id="@+id/last_session_calories"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/last_session_calories"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:fontFamily="@font/poppins_bold" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Weekly Stats compact -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weekly_stats_title"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="8dp"
                    app:drawableStartCompat="@drawable/ic_chart"
                    app:drawableTint="@color/accent_green" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        app:cardBackgroundColor="@color/card_bg"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="4dp"
                        app:strokeColor="@color/white_10"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginBottom="6dp"
                                app:cardBackgroundColor="@color/accent_green"
                                app:cardCornerRadius="14dp"
                                app:cardElevation="3dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_dumbbell"
                                    android:padding="5dp"
                                    android:contentDescription="@string/dumbbell_icon_desc"
                                    app:tint="@color/white" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sessions_label"
                                android:textColor="@color/accent_green"
                                android:textSize="10sp"
                                android:fontFamily="@font/poppins_medium" />

                            <TextView
                                android:id="@+id/sessions_week"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="@string/sessions_week_value"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins_bold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        app:cardBackgroundColor="@color/card_bg"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="4dp"
                        app:strokeColor="@color/white_10"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginBottom="6dp"
                                app:cardBackgroundColor="@color/accent_orange"
                                app:cardCornerRadius="14dp"
                                app:cardElevation="3dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_fire"
                                    android:padding="5dp"
                                    android:contentDescription="@string/fire_icon_desc"
                                    app:tint="@color/white" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/calories_burned_label"
                                android:textColor="@color/accent_orange"
                                android:textSize="10sp"
                                android:fontFamily="@font/poppins_medium" />

                            <TextView
                                android:id="@+id/calories_burned"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="@string/calories_burned_value"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins_bold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        app:cardBackgroundColor="@color/card_bg"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="4dp"
                        app:strokeColor="@color/white_10"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginBottom="6dp"
                                app:cardBackgroundColor="@color/accent_blue"
                                app:cardCornerRadius="14dp"
                                app:cardElevation="3dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_clock_circular"
                                    android:padding="5dp"
                                    android:contentDescription="@string/clock_circular_icon_desc"
                                    app:tint="@color/white" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/minutes_label"
                                android:textColor="@color/accent_blue"
                                android:textSize="10sp"
                                android:fontFamily="@font/poppins_medium" />

                            <TextView
                                android:id="@+id/minutes_active"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="@string/minutes_active_value"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins_bold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>

            <!-- Action Buttons compact -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="24dp"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/workouts_button"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/workouts_button_text"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppins_bold"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white"
                    app:iconSize="18dp"
                    app:cornerRadius="16dp"
                    app:backgroundTint="@color/accent_green"
                    app:rippleColor="@color/white_20"
                    android:elevation="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/diet_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:text="@string/diet_button_text"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:fontFamily="@font/poppins_semibold"
                        app:icon="@drawable/ic_diet"
                        app:iconGravity="textStart"
                        app:iconTint="@color/white"
                        app:iconSize="16dp"
                        app:cornerRadius="14dp"
                        app:backgroundTint="@color/secondary_action"
                        app:strokeColor="@color/white_20"
                        app:strokeWidth="1dp"
                        app:rippleColor="@color/white_20" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/stats_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:text="@string/stats_button_text"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:fontFamily="@font/poppins_semibold"
                        app:icon="@drawable/ic_stats"
                        app:iconGravity="textStart"
                        app:iconTint="@color/white"
                        app:iconSize="16dp"
                        app:cornerRadius="14dp"
                        app:backgroundTint="@color/secondary_action"
                        app:strokeColor="@color/white_20"
                        app:strokeWidth="1dp"
                        app:rippleColor="@color/white_20" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <include
        layout="@layout/bottom_navigation"
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>