<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg"
    android:id="@+id/main">

    <!-- Background floating elements -->
    <View
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="-60dp"
        android:layout_marginEnd="-60dp"
        android:alpha="0.04"
        android:background="@drawable/floating_circle"
        android:backgroundTint="@color/accent_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="-40dp"
        android:layout_marginBottom="-40dp"
        android:alpha="0.03"
        android:background="@drawable/floating_circle"
        android:backgroundTint="@color/accent_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Bouton retour -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            app:cardBackgroundColor="@color/white_10"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/white_20"
            app:strokeWidth="1dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_back"
                android:padding="8dp"
                app:tint="@color/white" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Titre et sous-titre -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ã‰DITION"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_medium"
                android:letterSpacing="0.1" />

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modifier le profil"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_bold" />
        </LinearLayout>

        <!-- Bouton Enregistrer -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Enregistrer"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_semibold"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:cornerRadius="16dp"
            app:rippleColor="@color/white_20"
            app:icon="@drawable/ic_save"
            app:iconGravity="start"
            app:iconSize="16dp"
             />
    </LinearLayout>

    <!-- Main Content ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/headerSection"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="24dp">

            <!-- Photo de profil -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/card_bg"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:strokeColor="@color/white_10"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PHOTO DE PROFIL"
                        android:textColor="@color/accent_green"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="16dp" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp">

                        <!-- Effet de halo compact -->
                        <View
                            android:layout_width="84dp"
                            android:layout_height="84dp"
                            android:layout_gravity="center"
                            android:background="@drawable/avatar_glow"
                            android:alpha="0.3" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/edit_profile_image"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_edit_profile"
                            android:padding="2dp"
                            android:scaleType="centerCrop"
                            android:clickable="true"
                            app:shapeAppearanceOverlay="@style/CircleImageView"
                            app:strokeColor="@color/accent_green"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/camera_button"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="bottom|end"
                            android:layout_marginEnd="2dp"
                            android:layout_marginBottom="2dp"
                            app:cardBackgroundColor="@color/accent_green"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="4dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_camera"
                                android:padding="6dp"
                                app:tint="@color/white" />
                        </com.google.android.material.card.MaterialCardView>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/change_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/changer_la_photo"
                        android:textColor="@color/accent_green"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_medium"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:padding="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Section Informations personnelles -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/card_bg"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:strokeColor="@color/white_10"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="12dp"
                            app:cardBackgroundColor="@color/accent_blue"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_user"
                                android:padding="6dp"
                                app:tint="@color/white" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="INFORMATIONS PERSONNELLES"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_bold" />
                    </LinearLayout>

                    <!-- PrÃ©nom et Nom sur la mÃªme ligne -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            android:hint="PrÃ©nom"
                            app:hintTextColor="@color/text_secondary"
                            app:boxBackgroundColor="@color/white_08"
                            app:boxStrokeColor="@color/accent_green"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edit_first_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/acccent_green"
                                android:textColorHint="@color/text_secondary"
                                android:textSize="14sp"
                                android:fontFamily="@font/poppins_medium"
                                android:inputType="textPersonName"
                                android:maxLines="1" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            android:hint="Nom"
                            app:hintTextColor="@color/text_secondary"
                            app:boxBackgroundColor="@color/white_08"
                            app:boxStrokeColor="@color/accent_green"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edit_last_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/acccent_green"
                                android:textColorHint="@color/text_secondary"
                                android:textSize="14sp"
                                android:fontFamily="@font/poppins_medium"
                                android:inputType="textPersonName"
                                android:maxLines="1" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Email -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="Email"
                        app:hintTextColor="@color/text_secondary"
                        app:boxBackgroundColor="@color/white_08"
                        app:boxStrokeColor="@color/accent_green"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:startIconDrawable="@drawable/ic_email"
                        app:startIconTint="@color/accent_green">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/acccent_green"
                            android:textColorHint="@color/text_secondary"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_medium"
                            android:inputType="textEmailAddress"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- TÃ©lÃ©phone -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="TÃ©lÃ©phone"
                        app:hintTextColor="@color/text_secondary"
                        app:boxBackgroundColor="@color/white_08"
                        app:boxStrokeColor="@color/accent_green"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:startIconDrawable="@drawable/ic_phone"
                        app:startIconTint="@color/accent_green">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_telephone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/acccent_green"
                            android:textColorHint="@color/text_secondary"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_medium"
                            android:inputType="phone"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Genre -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"
                        android:text="Genre"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_semibold" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/gender_chip_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:selectionRequired="true"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_male"
                            style="@style/GoalChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ‘¨ Homme" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_female"
                            style="@style/GoalChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ‘© Femme" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_other"
                            style="@style/GoalChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âš¤ Autre" />
                    </com.google.android.material.chip.ChipGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Section Mesures corporelles -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/card_bg"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:strokeColor="@color/white_10"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="12dp"
                            app:cardBackgroundColor="@color/accent_purple"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="6dp"
                                app:tint="@color/white" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MESURES CORPORELLES"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_bold" />
                    </LinearLayout>

                    <!-- Taille et Poids sur la mÃªme ligne -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            android:hint="Taille (cm)"
                            app:hintTextColor="@color/acccent_green"
                            app:boxBackgroundColor="@color/white_08"
                            app:boxStrokeColor="@color/accent_purple"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:startIconTint="@color/accent_purple">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edit_height"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/acccent_green"
                                android:textColorHint="@color/text_secondary"
                                android:textSize="14sp"
                                android:fontFamily="@font/poppins_medium"
                                android:inputType="numberDecimal"
                                android:maxLength="3"
                                android:maxLines="1" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            android:hint="Poids (kg)"
                            app:hintTextColor="@color/acccent_green"
                            app:boxBackgroundColor="@color/white_08"
                            app:boxStrokeColor="@color/accent_purple"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:startIconTint="@color/accent_purple">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edit_weight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/acccent_green"
                                android:textColorHint="@color/acccent_green"
                                android:textSize="14sp"
                                android:fontFamily="@font/poppins_medium"
                                android:inputType="numberDecimal"
                                android:maxLength="3"
                                android:maxLines="1" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Section Objectifs -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/card_bg"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:strokeColor="@color/white_10"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="12dp"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_goal"
                                android:padding="6dp"
                                />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="OBJECTIFS SPORTIFS"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Objectif principal"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_medium" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/goal_chip_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:selectionRequired="true"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_weight_loss"
                            style="@style/GoalChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“‰ Perte de poids" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_muscle_gain"
                            style="@style/GoalChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’ª Prise de muscle" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_maintenance"
                            style="@style/GoalChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âš–ï¸ Maintien" />
                    </com.google.android.material.chip.ChipGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Actions Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Bouton Enregistrer Principal -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/accent_green"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_save"
                            android:layout_marginEnd="8dp"
                           />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Enregistrer les modifications"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppins_bold"
                            android:textAlignment="center" />

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_arrow_right"
                            app:tint="@color/white" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Zone Danger -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/card_bg"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:strokeColor="@color/error_red"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
