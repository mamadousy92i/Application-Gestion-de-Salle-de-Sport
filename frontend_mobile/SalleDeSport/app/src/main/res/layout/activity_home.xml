<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg"
    tools:context=".Home">

    <!-- Background floating elements -->
    <View
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="-100dp"
        android:layout_marginEnd="-100dp"
        android:alpha="0.06"
        android:background="@drawable/floating_circle"
        android:backgroundTint="@color/accent_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="-75dp"
        android:layout_marginBottom="-75dp"
        android:alpha="0.04"
        android:background="@drawable/floating_circle"
        android:backgroundTint="@color/accent_orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingTop="15dp"
        android:paddingEnd="24dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Top Bar avec profile -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BONJOUR"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_medium"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/textUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="THIBAUT"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:fontFamily="@font/poppins_bold"
                    android:letterSpacing="0.05" />
            </LinearLayout>

            <!-- Notification Button - CORRIGÉ -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/notifications_button_desc"
                app:cardBackgroundColor="@color/white_10"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/white_20"
                app:strokeWidth="1dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_notifications"
                    android:padding="12dp"
                    android:contentDescription="@string/notifications_desc"
                    app:tint="@color/white" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Profile Image -->
            <!-- Profile Image - CORRIGÉ -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/profile_image_desc"
                app:cardCornerRadius="26dp"
                app:cardElevation="6dp"
                app:strokeColor="@color/accent_green"
                app:strokeWidth="2dp">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_edit_profile"
                    android:contentDescription="@string/user_profile_image_desc" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Location avec icône -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            android:paddingEnd="12dp"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_location"
                android:layout_marginEnd="8dp"
                app:tint="@color/accent_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Senegal"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_medium" />
        </LinearLayout>
    </LinearLayout>

    <!-- Main Content ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/headerSection"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="24dp">

            <!-- Quick Actions Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="32dp">

                <!-- Card 1: Voir les Abonnements -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardSubscriptions"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/card_bg"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:strokeColor="@color/white_10"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:gravity="center">

                        <!-- Icon Background -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="12dp"
                            app:cardBackgroundColor="@color/accent_orange"
                            app:cardCornerRadius="23dp"
                            app:cardElevation="4dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="54dp"
                                android:padding="10dp"
                                android:src="@drawable/ic_subscription"
                                app:tint="@color/white" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Voir les\nAbonnements"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_semibold"
                            android:textAlignment="center"
                            android:lineSpacingExtra="2dp"
                            android:layout_marginBottom="8dp" />

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_arrow_right"
                            app:tint="@color/accent_orange" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card 2: Mon Programme -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardProgram"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/card_bg"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:strokeColor="@color/white_10"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:gravity="center">

                        <!-- Icon Background -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="12dp"
                            app:cardBackgroundColor="@color/accent_blue"
                            app:cardCornerRadius="23dp"
                            app:cardElevation="4dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_program"
                                android:padding="10dp"
                                app:tint="@color/white" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:lineSpacingExtra="2dp"
                            android:text="Mon\nProgramme"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_arrow_right"
                            app:tint="@color/accent_blue" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Current Subscription Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="VOTRE ABONNEMENT ACTUEL"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_bold"
                    android:drawablePadding="10dp"
                    app:drawableTint="@color/accent_green" />


            </LinearLayout>

            <!-- Current Subscription Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/currentSubscriptionCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/card_bg"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                app:strokeColor="@color/accent_green"
                app:strokeWidth="2dp"
                android:visibility="visible">

                <!-- No Subscription Message -->
                <LinearLayout
                    android:id="@+id/textNoSubscription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:gravity="center"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginBottom="16dp"
                        app:tint="@color/text_secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aucun abonnement actif"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choisissez un abonnement pour commencer"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:textAlignment="center" />
                </LinearLayout>

                <!-- Subscription Details -->
                <LinearLayout
                    android:id="@+id/subscriptionDetailsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Subscription Image with Overlay -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp">

                        <ImageView
                            android:id="@+id/subscriptionImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/gym_background" />

                        <!-- Gradient Overlay -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <!-- Time Remaining Badge -->
                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|end"
                            android:layout_margin="16dp"
                            android:text="15 jours restants"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:fontFamily="@font/poppins_semibold"
                            app:chipBackgroundColor="@color/accent_orange"
                            app:chipCornerRadius="12dp"
                            app:chipIcon="@drawable/ic_clock"
                            app:chipIconTint="@color/white" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/subscriptionTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Abonnement Premium"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:fontFamily="@font/poppins_bold"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/subscriptionDuration"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mensuel - Expire le 15 Juillet"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/poppins_medium" />
                            </LinearLayout>


                        </LinearLayout>

                        <!-- Progress Section -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="8dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Progression"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/poppins_medium" />

                                <TextView
                                    android:id="@+id/subscriptionProgressText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="65% terminé"
                                    android:textColor="@color/accent_green"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/poppins_semibold" />
                            </LinearLayout>

                            <ProgressBar
                                android:id="@+id/subscriptionProgress"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="6dp"
                                android:progress="65"
                                android:progressTint="@color/accent_green"
                                android:progressBackgroundTint="@color/white_20" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Abonnements Disponibles Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ABONNEMENTS DISPONIBLES"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_bold"
                    android:drawablePadding="10dp"
                    app:drawableTint="@color/accent_orange" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voir tout"
                    android:textColor="@color/accent_green"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Card pour voir tous les abonnements -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/viewAllSubscriptionsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/card_bg"
                app:cardCornerRadius="18dp"
                app:cardElevation="6dp"
                app:strokeColor="@color/white_10"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <!-- Icon Background -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        app:cardBackgroundColor="@color/accent_green"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="4dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_subscription"
                            android:padding="12dp"
                            app:tint="@color/white" />
                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Voir tous les abonnements"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppins_semibold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Découvrez nos différentes offres premium"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_medium" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="@color/accent_green" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Stats Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="@color/card_bg"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:strokeColor="@color/white_10"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginBottom="8dp"
                            app:cardBackgroundColor="@color/accent_blue"
                            app:cardCornerRadius="16dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_workout"
                                android:padding="6dp"
                                app:tint="@color/white" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:fontFamily="@font/poppins_bold"
                            android:layout_marginBottom="2dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Séances"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:fontFamily="@font/poppins_medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    app:cardBackgroundColor="@color/card_bg"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:strokeColor="@color/white_10"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginBottom="8dp"
                            app:cardBackgroundColor="@color/accent_orange"
                            app:cardCornerRadius="16dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_flame"
                                android:padding="6dp"
                                />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.4k"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:fontFamily="@font/poppins_bold"
                            android:layout_marginBottom="2dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calories"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:fontFamily="@font/poppins_medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardBackgroundColor="@color/card_bg"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:strokeColor="@color/white_10"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginBottom="8dp"
                            app:cardBackgroundColor="@color/accent_purple"
                            app:cardCornerRadius="16dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_clock"
                                android:padding="6dp"
                                app:tint="@color/white" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24h"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:fontFamily="@font/poppins_bold"
                            android:layout_marginBottom="2dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Temps"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:fontFamily="@font/poppins_medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Motivation Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/card_bg"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:strokeColor="@color/accent_green"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <!-- Motivation Icon -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="16dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="6dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_goal"
                            />
                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Motivation du jour"
                            android:textColor="@color/accent_green"
                            android:textSize="12sp"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Votre seule limite, c'est vous !"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppins_semibold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/continuez_vous_d_passer_chaque_jour"
                            android:textColor="@color/text_secondary"
                            android:textSize="13sp"
                            android:fontFamily="@font/poppins_medium" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:tint="@color/accent_green"
                        android:alpha="0.6" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <include
        layout="@layout/bottom_navigation"
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>