<!-- res/drawable/animated_particle_medium.xml -->
<animation-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:oneshot="false">
    <item android:duration="3500">
        <shape android:shape="oval">
            <gradient
                android:angle="90"
                android:startColor="#1A237E66"
                android:centerColor="#0A0F1866"
                android:endColor="#141C2E66"
                android:type="linear" />
        </shape>
    </item>
    <item android:duration="3500">
        <shape android:shape="oval">
            <gradient
                android:angle="180"
                android:startColor="#0A0F1866"
                android:centerColor="#141C2E66"
                android:endColor="#1A237E66"
                android:type="linear" />
        </shape>
    </item>
    <item android:duration="3500">
        <shape android:shape="oval">
            <gradient
                android:angle="270"
                android:startColor="#141C2E66"
                android:centerColor="#1A237E66"
                android:endColor="#0A0F1866"
                android:type="linear" />
        </shape>
    </item>
</animation-list>