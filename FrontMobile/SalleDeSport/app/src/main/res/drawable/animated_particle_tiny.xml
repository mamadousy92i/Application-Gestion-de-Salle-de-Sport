<!-- res/drawable/animated_particle_tiny.xml -->
<animation-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:oneshot="false">
    <item android:duration="2500">
        <shape android:shape="oval">
            <gradient
                android:angle="90"
                android:startColor="#1A237E33"
                android:centerColor="#0A0F1833"
                android:endColor="#141C2E33"
                android:type="linear" />
        </shape>
    </item>
    <item android:duration="2500">
        <shape android:shape="oval">
            <gradient
                android:angle="180"
                android:startColor="#0A0F1833"
                android:centerColor="#141C2E33"
                android:endColor="#1A237E33"
                android:type="linear" />
        </shape>
    </item>
    <item android:duration="2500">
        <shape android:shape="oval">
            <gradient
                android:angle="270"
                android:startColor="#141C2E33"
                android:centerColor="#1A237E33"
                android:endColor="#0A0F1833"
                android:type="linear" />
        </shape>
    </item>
</animation-list>