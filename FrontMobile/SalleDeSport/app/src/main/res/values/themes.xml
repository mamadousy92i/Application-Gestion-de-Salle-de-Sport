<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SalleDeSport" parent="Theme.MaterialComponents.DayNight.NoActionBar">

    <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Primary brand color -->
        <item name="colorPrimary">#B2FF59</item>
        <item name="colorPrimaryVariant">#99E64A</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">#2D2D2D</item>
        <item name="colorSecondaryVariant">#1E1E1E</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@android:color/black</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#AAAAAA</item>
    </style>
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/accent_green</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="boxBackgroundColor">@color/card_bg</item>
    </style>

    <style name="GoalChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeColor">@color/accent_green</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipBackgroundColor">@color/chip_background_selector</item>
        <item name="chipCornerRadius">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="checkedIcon">@null</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipMinTouchTargetSize">0dp</item>
    </style>


</resources>