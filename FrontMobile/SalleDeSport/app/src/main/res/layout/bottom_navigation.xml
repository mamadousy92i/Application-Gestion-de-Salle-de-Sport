<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomNavigation"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginBottom="0dp"
    app:cardBackgroundColor="@color/glass_nav_bg"
    app:cardCornerRadius="0dp"
    app:cardElevation="8dp"
    app:strokeColor="@color/glass_border"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingStart="6dp"
        android:paddingEnd="6dp">

        <!-- Home Tab -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/homeTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:contentDescription="@string/home_icon_desc"
            app:cardBackgroundColor="@color/accent_green"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/homeIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_home"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/homeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="@string/home_tab"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:fontFamily="@font/poppins_semibold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Stats Tab -->
        <LinearLayout
            android:id="@+id/statsTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:contentDescription="@string/stats_nav_icon_desc"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/statsIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_stats"
                app:tint="@color/white"
                android:alpha="0.6" />

            <TextView
                android:id="@+id/statsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Abonnements"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:fontFamily="@font/poppins_medium"
                android:alpha="0.6" />
        </LinearLayout>

        <!-- Add Tab -->
        <LinearLayout
            android:id="@+id/addTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:contentDescription="@string/add_icon_desc"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/addIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_add"
                app:tint="@color/white"
                android:alpha="0.6" />

            <TextView
                android:id="@+id/addText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Objectif"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:fontFamily="@font/poppins_medium"
                android:alpha="0.6" />
        </LinearLayout>

        <!-- Profile Tab -->
        <LinearLayout
            android:id="@+id/profileTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:contentDescription="@string/profile_icon_desc"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_profile"
                app:tint="@color/white"
                android:alpha="0.6" />

            <TextView
                android:id="@+id/profileText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/profile_tab"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:fontFamily="@font/poppins_medium"
                android:alpha="0.6" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>