<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Image du plan -->
        <ImageView
            android:id="@+id/planImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_bg"
            android:contentDescription="Image du plan" />

        <!-- Nom du plan -->
        <TextView
            android:id="@+id/planTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom du Plan"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Prix -->
        <TextView
            android:id="@+id/planPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19,99€/mois"
            android:textSize="18sp"
            android:textColor="#FF6B35"
            android:layout_marginBottom="16dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/planDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description complète du plan ici"
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Titre options -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Options incluses :"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Détails options -->
        <TextView
            android:id="@+id/planOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✔ Coach inclus\n✔ Cours collectifs\n❌ Piscine"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

        <!-- Date de début -->
        <TextView
            android:id="@+id/tvStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_bg"
            android:text="Date de début : 01/06/2025"
            android:drawableEnd="@android:drawable/ic_menu_my_calendar"
            android:drawablePadding="8dp"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Renouvellement auto -->
        <Switch
            android:id="@+id/switchAutoRenewal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Renouvellement automatique"
            android:checked="true"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp" />

        <!-- Bouton s'abonner -->
        <Button
            android:id="@+id/btnSubscribe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="S'abonner"
            android:textAllCaps="false"
            android:backgroundTint="#FF6B35"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="14dp" />
    </LinearLayout>
</ScrollView>
