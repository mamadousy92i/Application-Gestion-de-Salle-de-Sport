<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg">

    <!-- ScrollView pour le contenu principal -->
    <ScrollView
        android:id="@+id/main_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigation"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Section -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Background avec dégradé -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="240dp" />

                <!-- Overlay subtil -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:alpha="0.05" />

                <!-- Header Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingTop="32dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="40dp">

                    <!-- Top Bar avec Back, Modifier et Déconnexion -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp"
                        android:gravity="center_vertical">

                        <!-- Bouton Back -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/back_button"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:contentDescription="@string/back_button_desc"
                            app:cardBackgroundColor="@color/white_10"
                            app:cardCornerRadius="22dp"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/white_20"
                            app:strokeWidth="1dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackgroundBorderless">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/back_button_desc"
                                android:src="@drawable/ic_arrow_back"
                                android:padding="10dp"
                                app:tint="@color/white" />
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Spacer pour centrer les boutons de droite -->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <!-- Bouton Modifier -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/edit_button"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginEnd="12dp"
                            android:elevation="4dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:minWidth="100dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:text="@string/edit_button_text"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            app:cornerRadius="20dp"
                            app:icon="@drawable/ic_edit"
                            app:iconGravity="start"
                            app:iconSize="16dp"
                            app:iconTint="@color/white"
                            app:rippleColor="@color/white_20"
                            app:backgroundColor="@color/accent_green"
                            />

                        <!-- Bouton Déconnexion -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/logout_button"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:contentDescription="@string/logout_button_desc"
                            app:cardBackgroundColor="@color/error_red_20"
                            app:cardCornerRadius="22dp"
                            app:cardElevation="2dp"
                            app:strokeColor="@color/error_red_30"
                            app:strokeWidth="1dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackgroundBorderless">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/logout_button_desc"
                                android:src="@drawable/logout_vector"
                                android:padding="10dp"
                                app:tint="@color/error_red" />
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <!-- Profile Image centrée -->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp">

                        <View
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center" />

                        <View
                            android:layout_width="76dp"
                            android:layout_height="76dp"
                            android:layout_gravity="center" />

                        <!-- Badge Premium -->
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/profile_image"
                            android:layout_width="114dp"
                            android:layout_height="106dp"
                            android:padding="2dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_edit_profile"
                            android:contentDescription="@string/profile_image_desc"
                            app:shapeAppearanceOverlay="@style/CircleImageView"
                            app:strokeColor="@color/accent_green"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="bottom|end"
                            android:layout_marginEnd="2dp"
                            android:layout_marginBottom="6dp"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="4dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_certified"
                                android:padding="3dp"
                                android:contentDescription="@string/verified_badge_desc"
                                />
                        </com.google.android.material.card.MaterialCardView>
                    </FrameLayout>

                    <!-- Name and Subscription -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:id="@+id/first_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/poppins_bold"
                            android:letterSpacing="-0.02"
                            android:maxLines="1"
                            android:text="@string/first_name"
                            android:textColor="@color/white"
                            android:textSize="28sp" />

                        <TextView
                            android:id="@+id/last_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.9"
                            android:ellipsize="end"
                            android:fontFamily="@font/poppins_semibold"
                            android:letterSpacing="-0.01"
                            android:maxLines="1"
                            android:text="@string/last_name"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/subscription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/subscription_text"
                            android:textColor="@color/dark_bg"
                            android:textSize="12sp"
                            app:chipBackgroundColor="@color/accent_green"
                            app:chipEndPadding="14dp"
                            app:chipIconTint="@color/dark_bg"
                            app:chipMinHeight="28dp"
                            app:chipStartPadding="14dp"
                            app:rippleColor="@color/white_20" />
                    </LinearLayout>

                    <!-- User Stats -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/card_bg"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/white"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <!-- Statistique Age -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_gravity="center_horizontal"
                                android:orientation="vertical">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginBottom="8dp"
                                    app:cardBackgroundColor="@color/accent_green"
                                    app:cardCornerRadius="20dp"
                                    >

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_user"
                                        android:padding="8dp"
                                        android:contentDescription="@string/age_icon_desc"
                                        app:tint="@color/white"
                                         />
                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/age_label"
                                    android:textColor="@color/accent_green"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:alpha="0.95" />

                                <TextView
                                    android:id="@+id/age"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="@string/age_value"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:fontFamily="@font/poppins_bold" />
                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/vertical_divider_gradient" />

                            <!-- Statistique Taille -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginBottom="8dp"
                                    app:cardBackgroundColor="@color/accent_blue"
                                    app:cardCornerRadius="20dp"
                                    app:cardElevation="4dp">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_height"
                                        android:padding="8dp"
                                        android:contentDescription="@string/height_icon_desc"
                                        />
                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/height_label"
                                    android:textColor="@color/accent_blue"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:alpha="0.95" />

                                <TextView
                                    android:id="@+id/height"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="@string/height_value"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:fontFamily="@font/poppins_bold" />
                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/vertical_divider_gradient" />

                            <!-- Statistique Poids -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginBottom="8dp"
                                    app:cardBackgroundColor="@color/accent_purple"
                                    app:cardCornerRadius="20dp"
                                    app:cardElevation="4dp">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_weight"
                                        android:padding="8dp"
                                        android:contentDescription="@string/weight_icon_desc"
                                        />
                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/weight_label"
                                    android:textColor="@color/accent_purple"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:alpha="0.95" />

                                <TextView
                                    android:id="@+id/weight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="@string/weight_value"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:fontFamily="@font/poppins_bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </FrameLayout>

            <!-- Goal Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="-24dp"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="@color/card_bg"
                app:cardCornerRadius="18dp"
                app:cardElevation="8dp"
                app:strokeColor="@color/white"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginEnd="12dp"
                        android:layout_gravity="center_vertical"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="22dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="0dp"
                            android:src="@drawable/ic_goal"
                            android:contentDescription="@string/goal_icon_desc"
                            />
                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/goal_label"
                            android:textColor="@color/accent_green"
                            android:textSize="12sp"
                            android:fontFamily="@font/poppins_medium" />

                        <TextView
                            android:id="@+id/goal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/goal_value"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppins_bold" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/edit_goal_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_goal_button_text"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_semibold"
                        app:cornerRadius="14dp"
                        app:backgroundTint="@color/accent_green"
                        app:rippleColor="@color/white_20"
                        android:minWidth="100dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Last Session -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/last_session_title"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_bold"
                    android:drawablePadding="10dp"
                    android:layout_marginBottom="12dp"
                    app:drawableStartCompat="@drawable/ic_workout"
                    app:drawableTint="@color/accent_green" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/card_bg"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="6dp"
                    app:strokeColor="@color/white"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:id="@+id/last_session_type"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="@string/last_session_type"
                                android:textColor="@color/accent_green"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins_bold" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/last_session_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/last_session_date"
                                android:textSize="12sp"
                                android:textColor="@color/accent_green"
                                android:fontFamily="@font/poppins_medium"
                                app:chipBackgroundColor="@color/accent_green_20"
                                app:chipIcon="@drawable/ic_calendar"
                                app:chipIconTint="@color/accent_green"
                                app:chipCornerRadius="10dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_marginEnd="8dp"
                                    app:cardBackgroundColor="@color/accent_blue_20"
                                    app:cardCornerRadius="14dp"
                                    app:cardElevation="0dp">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_clock"
                                        android:padding="5dp"
                                        android:contentDescription="@string/clock_icon_desc"
                                        app:tint="@color/accent_blue" />
                                </com.google.android.material.card.MaterialCardView>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/duration_label"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="15sp"
                                        android:fontFamily="@font/poppins_medium"
                                        tools:ignore="SmallSp" />

                                    <TextView
                                        android:id="@+id/last_session_duration"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/last_session_duration"
                                        android:textColor="@color/white"
                                        android:textSize="14sp"
                                        android:fontFamily="@font/poppins_bold" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_marginEnd="8dp"
                                    app:cardBackgroundColor="@color/accent_orange_20"
                                    app:cardCornerRadius="14dp"
                                    app:cardElevation="0dp">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_flame"
                                        android:padding="5dp"
                                        android:contentDescription="@string/flame_icon_desc"
                                        app:tint="@color/accent_orange" />
                                </com.google.android.material.card.MaterialCardView>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/calories_label"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="14sp"
                                        android:fontFamily="@font/poppins_medium" />

                                    <TextView
                                        android:id="@+id/last_session_calories"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/last_session_calories"
                                        android:textColor="@color/white"
                                        android:textSize="14sp"
                                        android:fontFamily="@font/poppins_bold" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Weekly Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weekly_stats_title"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_bold"
                    android:drawablePadding="10dp"
                    android:layout_marginBottom="12dp"
                    app:drawableStartCompat="@drawable/ic_chart"
                    app:drawableTint="@color/accent_green" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardBackgroundColor="@color/card_bg"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="6dp"
                        app:strokeColor="@color/white"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginBottom="8dp"
                                app:cardBackgroundColor="@color/accent_green"
                                app:cardCornerRadius="18dp"
                                app:cardElevation="4dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_dumbbell"
                                    android:padding="6dp"
                                    android:contentDescription="@string/dumbbell_icon_desc"
                                    app:tint="@color/white" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sessions_label"
                                android:textColor="@color/accent_green"
                                android:textSize="12sp"
                                android:fontFamily="@font/poppins_medium" />

                            <TextView
                                android:id="@+id/sessions_week"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/sessions_week_value"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:fontFamily="@font/poppins_bold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        app:cardBackgroundColor="@color/card_bg"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="6dp"
                        app:strokeColor="@color/white"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginBottom="8dp"
                                app:cardBackgroundColor="@color/accent_orange"
                                app:cardCornerRadius="18dp"
                                app:cardElevation="4dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_fire"
                                    android:padding="6dp"
                                    android:contentDescription="@string/fire_icon_desc"
                                    app:tint="@color/white" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/calories_burned_label"
                                android:textColor="@color/accent_orange"
                                android:textSize="12sp"
                                android:fontFamily="@font/poppins_medium" />

                            <TextView
                                android:id="@+id/calories_burned"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/calories_burned_value"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:fontFamily="@font/poppins_bold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardBackgroundColor="@color/card_bg"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="6dp"
                        app:strokeColor="@color/white"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginBottom="8dp"
                                app:cardBackgroundColor="@color/accent_blue"
                                app:cardCornerRadius="18dp"
                                app:cardElevation="4dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_clock_circular"
                                    android:padding="6dp"
                                    android:contentDescription="@string/clock_circular_icon_desc"
                                    app:tint="@color/white" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/minutes_label"
                                android:textColor="@color/accent_blue"
                                android:textSize="12sp"
                                android:fontFamily="@font/poppins_medium" />

                            <TextView
                                android:id="@+id/minutes_active"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/minutes_active_value"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:fontFamily="@font/poppins_bold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="40dp"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/workouts_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    android:text="@string/workouts_button_text"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white"
                    app:iconSize="20dp"
                    app:cornerRadius="18dp"
                    app:backgroundTint="@color/accent_green"
                    app:rippleColor="@color/white_20"
                    android:elevation="6dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/diet_button"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:text="@string/diet_button_text"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_semibold"
                        app:icon="@drawable/ic_diet"
                        app:iconGravity="textStart"
                        app:iconTint="@color/white"
                        app:iconSize="18dp"
                        app:cornerRadius="16dp"
                        app:backgroundTint="@color/secondary_action"
                        app:strokeColor="@color/white_20"
                        app:strokeWidth="1dp"
                        app:rippleColor="@color/white_20" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/stats_button"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:text="@string/stats_button_text"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_semibold"
                        app:icon="@drawable/ic_stats"
                        app:iconGravity="textStart"
                        app:iconTint="@color/white"
                        app:iconSize="18dp"
                        app:cornerRadius="16dp"
                        app:backgroundTint="@color/secondary_action"
                        app:strokeColor="@color/white_20"
                        app:strokeWidth="1dp"
                        app:rippleColor="@color/white_20" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <include
        layout="@layout/bottom_navigation"
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>